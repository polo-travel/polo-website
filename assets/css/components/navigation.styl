.navigation
  display flex
  padding 30px
  justify-content space-between
  align-items center
  position relative
  z-index 667
  &-list
    display flex
    list-style none
    +tablet()
      display none
  &-item
    margin-right: 60px
    gilroyBold()
    font-size: 20px
    a
      text-decoration none
      color black
  &-menu
    width 30px
    height 30px
    position relative
    display none
    +tablet()
      display block
    span
      width: 100%;
      height: 4px;
      background: blue-medium;
      display: block;
      position: relative;
      top: 10px;
      border-radius 5px
      margin-bottom: 4px
      &:last-of-type
        margin-bottom: 0px
      &:nth-child(2)
        transform translateX(6px)
        width 80%

