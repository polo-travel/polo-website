.team
  min-height calc(100vh + 50px)
  overflow hidden
  +tablet()
    min-height calc(170vh + 50px)

  background blue-light
  &-dashed
    position absolute
    left 50%
    transform translateX(-50%)
    width 100vw
    //+desktop()
    //  display block
    //  transform translate(0px) rotate(45deg)
    //  width unset
    +tablet()
      display none
  &-compass
    position absolute
    left 50%
    transform translateX(-50%)
    width 60vh
    +tablet()
      width 100vw
  &-title
    gilroyBold()
    font-size: 40px
    z-index 2
    +tablet()
      text-align left
      padding: 0 30px
  &-description
    z-index 2
    +tablet()
      padding: 0 30px
      text-align left
      margin-bottom 20px
  &-user
    background white
    min-width 200px
    border-radius 30px
    padding 40px 20px
    position relative
    z-index 2
    transform translateY(2vh)
    +desktop()
      padding 40px 10px
      min-width 170px
    +tablet()
      padding 40px 20px
      min-width 200px
      transform translate(-5vh, 0vh)
    &:nth-child(2)
      transform translateY(12vh)
      +tablet()
        transform translate(5vh, 0vh)
    &:nth-child(3)
      transform translateY(7vh)
      +tablet()
        transform translate(-5vh, 0vh)
    &:last-of-type
      transform translateY(4vh)
      +tablet()
        transform translate(5vh, 0vh)
    img
      position absolute
      top: -12vh;
      left: 50%;
      transform: translateX(-50%);
      z-index 3
    &--name
      gilroyBold()
      +desktop()
        font-size 14px
    &--role
      display block
      margin-top 20px
      font-size: 11px
      position relative
      &::after
        content ""
        display block
        width 100%
        height 1px
        background lightgrey
        position absolute
        top: -12px
  .contentWrapper
    display flex
    height calc(100vh - 100px)
    flex-direction column
    text-align center
    //overflow-x hidden
  .membersWrapper
    display flex
    position relative
    width 100vw
    z-index 2
    height 100%
    justify-content space-around
    align-items center
    +tablet()
      min-height 130vh
      margin-top 30px
      flex-direction column

