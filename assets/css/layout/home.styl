.home
  height 100vh
  background blue-medium
  position relative
  &-content
    width 60%
    margin-top -60px
    +desktop()
      padding-right: 20px
    +tablet()
      width unset
      margin-top 0
      padding-right 0
    &--title
      gilroyBold()
      font-size: 50px
      +tablet()
        font-size 30px

    &--description
      gilroyMedium()
      max-width 460px
  &-device
    width 40%
    padding-left 60px
    display flex
    justify-content center
    +tablet()
      padding-left 0
      position absolute
      width 100%
      bottom 0px
    +mobile()
      bottom -20vh
    img
      width 70vh
      +desktop()
        width 40vw
      +tablet()
        width 30vh

  &-stores
    display flex
    img
      width 140px
      height 140px
      &:first-of-type
        margin-right 20px
  &-arrow
    position absolute
    bottom 10px
    +tablet()
      display none
  .svgContainer
    position absolute
    top 0
    width 100vw
    height 100vh
    svg
      position: absolute
      width 100vw
      height 150vh
      +mobile()
        height 110vh
  .contentWrapper
    position relative
    display flex
    height calc(100% - 100px)
    justify-content center
    align-items center
    +tablet()
      flex-direction column
      align-items center
      justify-content unset
      padding 35px

